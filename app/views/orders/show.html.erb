<h1>Order Details</h1>

<p>
  <strong>Order ID:</strong>
  <%= @order.id %>
</p>

<p>
  <strong>Total Price:</strong>
  $<%= @order.total_price %>
</p>

<h2>Order Items</h2>
<table>
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.quantity %></td>
        <td>$<%= item.product.price %></td>
        <td>$<%= item.total_price %></td>
      </tr>
    <% end %>
  </tbody>
</table>
